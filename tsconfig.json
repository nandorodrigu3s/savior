// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "types": [
      "@types/styled-components-react-native",
      "@types/react-native-vector-icons",
      "@types/node"
    ],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@assets/*": ["./src/assets/*"],
      "@system/*": ["./src/system/*"],
    },
    "skipLibCheck": true
  }
}
